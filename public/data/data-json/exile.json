        "background_info": [
          {
            "subtitle": "Background:",
            "items": [
              "Born in Hong Kong to Irish parents",
              "Adopted daughter of George Taufer",
              "Arrived in Dapitan on February 1895",
              "Came to seek treatment for Taufer's blindness",
              "18 years old when she met Rizal"
            ]
          },
          {
            "subtitle": "Relationship Timeline:",
            "items": [
              "February 1895: First meeting",
              "Quick romantic development",
              "Lived together as common-law spouses",
              "December 1895: Son born (died shortly after)",
              "Stayed together until Rizal's departure"
            ]
          }
        ],
        "relationship_details": [
          {
            "title": "Marriage Controversy:",
            "description": "Rizal and Josephine wanted to marry in a Catholic ceremony, but the parish priest refused unless Rizal retracted his anti-Catholic writings and beliefs. Rizal declined, so they lived together without formal marriage, which was scandalous by contemporary standards."
          },
          {
            "title": "Tragic Loss:",
            "description": "Their son, born in December 1895, died shortly after birth. This tragedy deeply affected both Rizal and Josephine, strengthening their bond through shared grief."
          },
          {
            "title": "Impact on Rizal:",
            "description": "Josephine brought companionship and emotional support during Rizal's exile. She helped manage his household and assisted in his various projects. Their relationship provided Rizal with personal happiness during a difficult period."
          }
        ]
      }
